<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/skyBlue"
    tools:context="com.h2gether.homePage.ProfilePage">

    <include
        android:id="@+id/toolbarLayout"
        layout="@layout/activity_tool_bar" />

    <!--Profile Picture-->
    <ImageView
        android:id="@+id/profile_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@drawable/profile_default"
        android:elevation="2dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbarLayout" />

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="90dp"
        android:background="@drawable/division_background_profile"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbarLayout"/>

    <!--username-->
    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_bold"
        android:text="jendlrs"
        android:textColor="@color/darkBlue"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile_image_view" />

    <!-- TODO: User Config info -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:id="@+id/user_config_group"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_margin="15dp"
        app:layout_constraintTop_toBottomOf="@+id/username">

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:background="@drawable/profile_user_config_bg"
            android:layout_marginEnd="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/user_sex"
                android:text="F"
                android:textSize="25sp"
                android:textColor="@color/darkBlue"
                android:fontFamily="@font/poppins_bold"
                android:gravity="center"
                android:layout_marginTop="15dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sex"
                android:textSize="12sp"
                android:textColor="@color/gray"
                android:fontFamily="@font/poppins_semibold"
                android:gravity="center"
                android:layout_gravity="bottom"
                android:layout_marginBottom="10dp"/>

        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:background="@drawable/profile_user_config_bg"
            android:layout_marginEnd="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/user_age"
                android:text="20"
                android:textSize="25sp"
                android:textColor="@color/darkBlue"
                android:fontFamily="@font/poppins_bold"
                android:gravity="center"
                android:layout_marginTop="15dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Age"
                android:textSize="12sp"
                android:textColor="@color/gray"
                android:fontFamily="@font/poppins_semibold"
                android:gravity="center"
                android:layout_gravity="bottom"
                android:layout_marginBottom="10dp"/>

        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:background="@drawable/profile_user_config_bg"
            android:layout_marginEnd="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/user_weight"
                android:text="62"
                android:textSize="25sp"
                android:textColor="@color/darkBlue"
                android:fontFamily="@font/poppins_bold"
                android:gravity="center"
                android:layout_marginTop="15dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Weight"
                android:textSize="12sp"
                android:textColor="@color/gray"
                android:fontFamily="@font/poppins_semibold"
                android:gravity="center"
                android:layout_gravity="bottom"
                android:layout_marginBottom="10dp"/>

        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:background="@drawable/profile_user_config_bg">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/user_height"
                android:text="162"
                android:textSize="25sp"
                android:textColor="@color/darkBlue"
                android:fontFamily="@font/poppins_bold"
                android:gravity="center"
                android:layout_marginTop="15dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Height"
                android:textSize="12sp"
                android:textColor="@color/gray"
                android:fontFamily="@font/poppins_semibold"
                android:gravity="center"
                android:layout_gravity="bottom"
                android:layout_marginBottom="10dp"/>

        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:orientation="vertical"
        android:layout_margin="15dp"
        app:layout_constraintTop_toBottomOf="@+id/user_config_group">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Activity Level"
            android:id="@+id/physical_act"
            android:textColor="@color/darkBlue"
            android:textSize="18sp"
            android:fontFamily="@font/poppins_semibold"/>

        <ImageView
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/config_buttons"
            android:src="@drawable/moderately_active_icon"
            android:id="@+id/user_level_img"
            android:layout_gravity="center"
            android:padding="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Moderately Active"
            android:layout_marginTop="5dp"
            android:id="@+id/user_level"
            android:textSize="14sp"
            android:textColor="@color/gray"
            android:fontFamily="@font/poppins_bold"
            android:layout_gravity="center"/>

    </LinearLayout>

    <!-- TODO: User Badges -->
    <!-- TODO: Sign out -->

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.35" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.65" />

</androidx.constraintlayout.widget.ConstraintLayout>