<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@android:color/transparent" /> <!-- Background color of the EditText -->
            <stroke
                android:width="2dp"
                android:color="@color/btnSelected" /> <!-- Border color -->
            <corners android:radius="25dp" /> <!-- Border corner radius -->
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@android:color/transparent" /> <!-- Background color of the EditText -->
            <stroke
                android:width="1dp"
                android:color="@color/lightGray" /> <!-- Border color -->
            <corners android:radius="25dp" /> <!-- Border corner radius -->
        </shape>
    </item>
</selector>
