<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background shape -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white" />
            <corners android:radius="15dp" />
        </shape>
    </item>

    <!-- Top border -->
    <item
        android:left="-8dp"
        android:right="-8dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <stroke
                android:width="1dp"
                android:color="@color/blackLowTransparency" />
        </shape>
    </item>

    <!-- Bottom border -->
    <item
        android:left="-8dp"
        android:right="-8dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <stroke
                android:width="1dp"
                android:color="@color/blackLowTransparency" />
        </shape>
    </item>
</layer-list>
